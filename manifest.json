{
  "manifest_version": 3,
  "name": "抖音直播直链解析",
  "version": "1.0.1",
  "description": "解析抖音直播间的视频直链地址",
  "author": "Troray",
  "homepage_url": "https://github.com/Troray/StreamLinkBookmark",
  "developer": {
    "name": "Troray",
    "url": "https://github.com/Troray"
  },
  "short_name": "抖音直播直链解析",
  "default_locale": "zh_CN",
  "browser_specific_settings": {
    "gecko": {
      "id": "douyin-live-parser@github.Troray",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "https://live.douyin.com/*",
    "https://www.douyin.com/live/*",
    "https://www.douyin.com/user/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "抖音直播直链解析"
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.douyin.com/user/*"],
      "js": ["content.js"]
    }
  ]
}